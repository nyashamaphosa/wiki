<h1 class="h1_center"> Articles </h1>

<%= search_form_for @q do |f| %>
  <%= f.label :Search_by_Title_or_language %>
  <%= f.search_field :category_category_name_or_title_cont %>

  <%= f.submit %>
<% end %>

<% @articles.each do |article| %>
     <h1 class="remove_underline"><%= article.category.category_name %> - <%= link_to article.title, article_path(article) %></h1> <span id="time_ago"> Created: <%= time_ago_in_words(article.created_at) %> ago </span>
     <p class="remove_underline"><%= link_to truncate(article.body, omission: '...... (continue reading)', length: 400), article_path(article) %></p>
<hr>
<% end %>
