<h1 class="h1_center"> Articles#index</h1>


<% @articles.each do |article| %>
     <h1 class="remove_underline"><%= link_to article.title, article_path(article) %></h1>
     <p class="remove_underline"><%= link_to truncate(article.body, omission: '...... (continue reading)', length: 400), article_path(article) %></p>
<hr>
<% end %>
