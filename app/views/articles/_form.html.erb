<%= simple_form_for @article do |f| %>
  <%= f.label :TITLE %>:
  <%= f.input :title, label: false %>
  <br>
  <%= f.label :Article_Categoy %>:
  <%= f.association :category, label_method: :category_name, value_method: :id, include_blank: false %>
  <br>
  <%= f.label :BODY %>:
  <%= f.trix_editor :body, label: false %>
  <br>
  <%= f.button :submit %>
<% end %>